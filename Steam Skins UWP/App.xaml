<Application
    x:Class="Steam_Skins_UWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    RequestedTheme="Light">

    <Application.Resources>
        <Color x:Key="ColorPrimario">#506a69</Color>
        <Color x:Key="ColorSecundario">#698c8a</Color>
        <Color x:Key="ColorTerciario">#b6c8c7</Color>
        <Color x:Key="ColorCuarto">#374848</Color>

        <SolidColorBrush x:Key="BrushPrimario" Color="{StaticResource ColorPrimario}"/>
        <SolidColorBrush x:Key="BrushSecundario" Color="{StaticResource ColorSecundario}"/>
        <SolidColorBrush x:Key="BrushTercero" Color="{StaticResource ColorTerciario}"/>
        <SolidColorBrush x:Key="BrushCuarto" Color="{StaticResource ColorCuarto}"/>

        <AcrylicBrush x:Key="AcrilicoFondo" BackgroundSource="Backdrop" TintColor="{StaticResource ColorPrimario}" FallbackColor="{StaticResource ColorCuarto}" TintOpacity=".7"/>

        <Color x:Key="ColorCajaRojaFondo">#cd5c5c</Color>
        <Color x:Key="ColorCajaRojaSombra">#6b2121</Color>
        <Color x:Key="ColorCajaRojaBoton">#c84d4d</Color>
        <Color x:Key="ColorCajaRojaBotonHover">#892a2a</Color>
    </Application.Resources>
</Application>
