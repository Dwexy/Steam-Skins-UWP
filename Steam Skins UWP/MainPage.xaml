<Page
    x:Class="Steam_Skins_UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="Page_Loaded" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.TopAppBar>
        <CommandBar x:Name="commadBarTop" Foreground="White" HorizontalContentAlignment="Center">
            <CommandBar.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="CadetBlue" Offset="0.5" />
                    <GradientStop Color="CadetBlue" Offset="1.0" />
                </LinearGradientBrush>
            </CommandBar.Background>

            <CommandBar.PrimaryCommands>
                <AppBarButton x:Name="botonInicio" Foreground="White">
                    <AppBarButton.Content>
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Symbol="Home" Margin="5,0,10,0"/>
                            <TextBlock x:Name="botonInicioTexto" VerticalAlignment="Center"/>
                        </StackPanel>
                    </AppBarButton.Content>
                </AppBarButton>
                <AppBarSeparator Foreground="White" VerticalAlignment="Center"/>
                <AppBarButton x:Name="botonApariencias" Foreground="White">
                    <AppBarButton.Content>
                        <StackPanel Orientation="Horizontal">
                            <controls:ImageEx Margin="5,0,10,0" Source="Assets\steam_logo.png" Width="20" Height="20"/>
                            <TextBlock x:Name="botonAparienciasTexto" VerticalAlignment="Center"/>
                        </StackPanel>
                    </AppBarButton.Content>
                </AppBarButton>
                <AppBarSeparator Foreground="White" VerticalAlignment="Center"/>
                <AppBarButton x:Name="botonConfig" Foreground="White">
                    <AppBarButton.Content>
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Symbol="Setting" Margin="5,0,10,0"/>
                            <TextBlock x:Name="botonConfigTexto" VerticalAlignment="Center"/>
                        </StackPanel>
                    </AppBarButton.Content>
                </AppBarButton>
            </CommandBar.PrimaryCommands>
        </CommandBar>
    </Page.TopAppBar>

    <Page.Resources>
        <DataTemplate x:Key="FeedRSS">
            <Grid Tag="{Binding Enlace}" Margin="1">
                <TextBlock Text="{Binding Titulo}" TextWrapping="Wrap" />
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid Background="#FFF0F0F0">
        <Grid x:Name="gridInicio">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Padding="80,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,50,0,0" HorizontalAlignment="Left">
                    <Button x:Name="botonInicioVotar" Padding="10" Background="CadetBlue" Foreground="White" Width="200" Margin="0,0,0,20" >
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <SymbolIcon Symbol="Like" Margin="0,0,10,0"/>
                                <TextBlock x:Name="botonInicioVotarTexto" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button x:Name="botonInicioCompartir" Padding="10" Background="CadetBlue" Foreground="White" Width="200" Margin="0,0,0,20" >
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <FontIcon Glyph="&#59181;" Margin="0,0,10,0"/>
                                <TextBlock x:Name="botonInicioCompartirTexto" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button x:Name="botonInicioContacto" Padding="10" Background="CadetBlue" Foreground="White" Width="200" Margin="0,0,0,20" >
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <SymbolIcon Symbol="Contact" Margin="0,0,10,0"/>
                                <TextBlock x:Name="botonInicioContactoTexto" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Row="1" Orientation="Vertical" Padding="0,0,0,50" HorizontalAlignment="Left">
                    <Button x:Name="botonInicioMasApps" Padding="10" Background="CadetBlue" Foreground="White" Width="200">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="botonInicioMasAppsTexto" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <StackPanel x:Name="spMasApps" Orientation="Vertical" Width="200" Margin="0,5,0,0">
                        <Button x:Name="botonAppSteamTiles" Padding="10" Background="dimGray" Foreground="White" Width="200" Margin="0,0,0,5" HorizontalContentAlignment="Left">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <controls:ImageEx Source="Assets\steam_logo.png" Margin="0,0,10,0" Width="20" Height="20"/>
                                    <TextBlock Text="Steam Games Tiles" Foreground="White" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        <Button x:Name="botonAppSteamDeals" Padding="10" Background="darkOliveGreen" Foreground="White" Width="200" Margin="0,0,0,5" HorizontalContentAlignment="Left">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <controls:ImageEx Source="Assets\steam_logo.png" Margin="0,0,10,0" Width="20" Height="20"/>
                                    <TextBlock Text="Steam Deals" Foreground="White" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        <Button x:Name="botonAppSteamCategories" Padding="10" Background="darkBlue" Foreground="White" Width="200" Margin="0,0,0,5" HorizontalContentAlignment="Left">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <controls:ImageEx Source="Assets\steam_logo.png" Margin="0,0,10,0" Width="20" Height="20"/>
                                    <TextBlock Text="Steam Categories" Foreground="White" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        <Button x:Name="botonAppSteamBridge" Padding="10" Background="darkMagenta" Foreground="White" Width="200" Margin="0,0,0,5" HorizontalContentAlignment="Left">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <controls:ImageEx Source="Assets\steam_logo.png" Margin="0,0,10,0" Width="20" Height="20"/>
                                    <TextBlock Text="Steam Bridge" Foreground="White" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center" Padding="50,0">
                <StackPanel Orientation="Horizontal" Padding="10" Background="CadetBlue">
                    <controls:ImageEx Source="Assets\rss_logo.png" Width="24" Height="24" HorizontalAlignment="Left"/>
                    <TextBlock x:Name="tbRSS" Margin="10,0,0,0" VerticalAlignment="Center" Foreground="White"/>
                </StackPanel>
                <ListView x:Name="lvRSS" IsItemClickEnabled="True" ItemTemplate="{StaticResource FeedRSS}" BorderThickness="1,0,1,1" BorderBrush="CadetBlue"/>
            </StackPanel>

            <Grid Grid.Column="2" Padding="80,50">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" VerticalAlignment="Top">
                    <Grid HorizontalAlignment="Right">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <SymbolIcon Grid.Column="0" Symbol="Important" Margin="0,0,10,0"/>
                        <TextBlock x:Name="tbConsejoConfig" Grid.Column="1" TextWrapping="Wrap"/>
                    </Grid>
                </Grid>

                <StackPanel Grid.Row="1" VerticalAlignment="Center">
                    <Grid Padding="10" Background="CadetBlue">
                        <TextBlock x:Name="tbInicioGrid" Foreground="White" HorizontalAlignment="Center" TextWrapping="Wrap"/>
                    </Grid>
                    <ComboBox x:Name="cbArranque" HorizontalAlignment="Stretch">
                        <ComboBoxItem x:Name="cbItemArranqueInicio"/>
                        <ComboBoxItem x:Name="cbItemArranqueApariencias"/>
                        <ComboBoxItem x:Name="cbItemArranqueConfig"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Row="2" Orientation="Vertical" VerticalAlignment="Bottom">
                    <TextBlock x:Name="tbVersionApp" HorizontalAlignment="Right" TextWrapping="Wrap"/>
                    <TextBlock x:Name="tbVersionWindows" HorizontalAlignment="Right" TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </Grid>

        <Grid x:Name="gridSkins" Visibility="Collapsed" Background="CadetBlue">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="spListaSkins" VerticalAlignment="Top" Padding="0,15,0,0">
                    <Button x:Name="buttonSeleccionAir" Content="Air" Width="160" Padding="10,15" Background="Transparent" HorizontalContentAlignment="Left" BorderThickness="5,0,0,0" Foreground="White"/>
                    <Button x:Name="buttonSeleccionAirClassic" Content="Air Classic" Width="160" Padding="10,15" Background="Transparent" HorizontalContentAlignment="Left" BorderThickness="5,0,0,0" Foreground="White"/>
                    <Button x:Name="buttonSeleccionCompact" Content="Compact" Width="160" Padding="10,15" Background="Transparent" HorizontalContentAlignment="Left" BorderThickness="5,0,0,0" Foreground="White"/>
                    <Button x:Name="buttonSeleccionInvert" Content="Invert" Width="160" Padding="10,15" Background="Transparent" HorizontalContentAlignment="Left" BorderThickness="5,0,0,0" Foreground="White"/>
                    <Button x:Name="buttonSeleccionMetro" Content="Metro" Width="160" Padding="10,15" Background="Transparent" HorizontalContentAlignment="Left" BorderThickness="5,0,0,0" Foreground="White"/>
                    <Button x:Name="buttonSeleccionMinimal" Content="Minimal" Width="160" Padding="10,15" Background="Transparent" HorizontalContentAlignment="Left" BorderThickness="5,0,0,0" Foreground="White"/>
                    <Button x:Name="buttonSeleccionPixelVision2" Content="PixelVision²" Width="160" Padding="10,15" Background="Transparent" HorizontalContentAlignment="Left" BorderThickness="5,0,0,0" Foreground="White"/>
                    <Button x:Name="buttonSeleccionPressure2" Content="Pressure²" Width="160" Padding="10,15" Background="Transparent" HorizontalContentAlignment="Left" BorderThickness="5,0,0,0" Foreground="White"/>
                    <Button x:Name="buttonSeleccionThreshold" Content="Threshold" Width="160" Padding="10,15" Background="Transparent" HorizontalContentAlignment="Left" BorderThickness="5,0,0,0" Foreground="White"/>
                </StackPanel> 
            </ScrollViewer>

            <Grid Grid.Column="1" Background="#FFF0F0F0" Padding="20,15,10,5">
                <Grid x:Name="gridSkinAir" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="buttonDescargaAir" Grid.Column="0" Padding="10" Background="#FFE4E4E4" IsEnabled="False">
                            <StackPanel Orientation="Horizontal" >
                                <SymbolIcon Symbol="Download" Margin="0,0,10,0" VerticalAlignment="Center" />
                                <TextBlock x:Name="buttonDescargaTextoAir"/>
                            </StackPanel>
                        </Button>
                        <TextBlock x:Name="textBlockInformeAir" Grid.Column="1" Margin="10" VerticalAlignment="Center"/>
                        <ProgressRing x:Name="progressInformeAir" Grid.Column="2" Margin="10" HorizontalAlignment="Left" Visibility="Collapsed"/>
                        <TextBlock x:Name="textBlockCreadoAir" Grid.Column="3" Margin="10" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="4" Margin="-5,10,10,10" Text="Inhibitor" VerticalAlignment="Center"/>
                        <Button x:Name="buttonWebAir" Grid.Column="5" Padding="10" Background="Transparent">
                            <StackPanel Orientation="Horizontal" >
                                <SymbolIcon Symbol="World" Margin="0,0,10,0" VerticalAlignment="Center" />
                                <TextBlock Text="Web"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="buttonPatreonAir" Grid.Column="6" Padding="10" Background="Transparent">
                            <StackPanel Orientation="Horizontal" >
                                <controls:ImageEx Source="Assets\patreon.png" Height="20" Width="20" Margin="0,0,10,0" VerticalAlignment="Center" />
                                <TextBlock Text="Patreon"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <Grid Grid.Row="1" Margin="5,10,0,0" Height="44">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock x:Name="tbScreenshotsAir" Grid.Column="0" VerticalAlignment="Center"/>
                        <TextBlock x:Name="tbOpcionesAir" Grid.Column="1" Margin="10,10,0,10" VerticalAlignment="Center"/>
                        <AppBarSeparator Grid.Column="2"/>
                        <Grid x:Name="gridOpcionesAir" Grid.Column="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Theme:" Margin="0,10,10,10" VerticalAlignment="Center"/>
                            <ComboBox x:Name="comboBoxOpcionAirTheme" Grid.Column="1" VerticalAlignment="Center" Width="100" SelectedIndex="0">
                                <ComboBoxItem Content="Light" />
                                <ComboBoxItem Content="Dark" />
                            </ComboBox>
                            <TextBlock Grid.Column="2" Text="Color:" Margin="10" VerticalAlignment="Center"/>
                            <ComboBox x:Name="comboBoxOpcionAirColor" Grid.Column="3" VerticalAlignment="Center" Width="120" SelectedIndex="0">
                                <ComboBoxItem Content="Sky" />
                                <ComboBoxItem Content="Sea" />
                                <ComboBoxItem Content="Breeze" />
                                <ComboBoxItem Content="Slate" />
                                <ComboBoxItem Content="Truffle" />
                                <ComboBoxItem Content="Gunmetal" />
                                <ComboBoxItem Content="Silver" />
                                <ComboBoxItem Content="Grass" />
                                <ComboBoxItem Content="Rose" />
                                <ComboBoxItem Content="Cinnabar" />
                                <ComboBoxItem Content="Lavender" />
                                <ComboBoxItem Content="Lilac" />
                                <ComboBoxItem Content="Deeppurple" />
                                <ComboBoxItem Content="Steamblue" />
                                <ComboBoxItem Content="Youtubered" />
                            </ComboBox>
                        </Grid>
                    </Grid>

                    <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" VerticalAlignment="Top">
                        <Grid Padding="0,0,0,10" Margin="0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="buttonImagePreview1Air" Grid.Column="0" Background="Transparent" Padding="0">
                                <Button.Content>
                                    <controls:ImageEx x:Name="imagePreview1Air" Source="Assets/Skins/air1.PNG" />
                                </Button.Content>
                            </Button>

                            <Button x:Name="buttonImagePreview2Air" Grid.Column="1" Background="Transparent" Padding="0">
                                <Button.Content>
                                    <controls:ImageEx x:Name="imagePreview2Air" Source="Assets/Skins/air2.PNG" />
                                </Button.Content>
                            </Button>

                            <Button x:Name="buttonImagePreview3Air" Grid.Column="2" Background="Transparent" Padding="0">
                                <Button.Content>
                                    <controls:ImageEx x:Name="imagePreview3Air" Source="Assets/Skins/air3.PNG" />
                                </Button.Content>
                            </Button>

                            <Button x:Name="buttonImagePreview4Air" Grid.Column="3" Background="Transparent" Padding="0">
                                <Button.Content>
                                    <controls:ImageEx x:Name="imagePreview4Air" Source="Assets/Skins/air4.PNG" />
                                </Button.Content>
                            </Button>
                        </Grid>
                    </ScrollViewer>
                </Grid>
                <Grid x:Name="gridSkinAirClassic" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="buttonDescargaAirClassic" Grid.Column="0" Padding="10" Background="#FFE4E4E4" IsEnabled="False">
                            <StackPanel Orientation="Horizontal" >
                                <SymbolIcon Symbol="Download" Margin="0,0,10,0" VerticalAlignment="Center" />
                                <TextBlock x:Name="buttonDescargaTextoAirClassic"/>
                            </StackPanel>
                        </Button>
                        <TextBlock x:Name="textBlockInformeAirClassic" Grid.Column="1" Margin="10" VerticalAlignment="Center"/>
                        <ProgressRing x:Name="progressInformeAirClassic" Grid.Column="2" Margin="10" HorizontalAlignment="Left" Visibility="Collapsed"/>
                        <TextBlock x:Name="textBlockCreadoAirClassic" Grid.Column="3" Margin="10" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="4" Margin="-5,10,10,10" Text="Inhibitor" VerticalAlignment="Center"/>
                        <Button x:Name="buttonWebAirClassic" Grid.Column="5" Padding="10" Background="Transparent">
                            <StackPanel Orientation="Horizontal" >
                                <SymbolIcon Symbol="World" Margin="0,0,10,0" VerticalAlignment="Center" />
                                <TextBlock Text="Web"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="buttonPatreonAirClassic" Grid.Column="6" Padding="10" Background="Transparent">
                            <StackPanel Orientation="Horizontal" >
                                <controls:ImageEx Source="Assets\patreon.png" Height="20" Width="20" Margin="0,0,10,0" VerticalAlignment="Center" />
                                <TextBlock Text="Patreon"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <Grid Grid.Row="1" Margin="5,10,0,0" Height="44">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock x:Name="tbScreenshotsAirClassic" Grid.Column="0" VerticalAlignment="Center"/>
                        <TextBlock x:Name="tbOpcionesAirClassic" Grid.Column="1" Margin="10,10,0,10" VerticalAlignment="Center"/>
                        <AppBarSeparator Grid.Column="2"/>
                        <Grid x:Name="gridOpcionesAirClassic" Grid.Column="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Color:" Margin="10" VerticalAlignment="Center"/>
                            <ComboBox x:Name="comboBoxOpcionAirClassicColor" Grid.Column="1" VerticalAlignment="Center" Width="140" SelectedIndex="0">
                                <ComboBoxItem Content="Blue" />
                                <ComboBoxItem Content="Bubblegum" />
                                <ComboBoxItem Content="Cinnamon" />
                                <ComboBoxItem Content="Green" />
                                <ComboBoxItem Content="Happyorange" />
                                <ComboBoxItem Content="Navy" />
                                <ComboBoxItem Content="Night" />
                                <ComboBoxItem Content="Orange" />
                                <ComboBoxItem Content="Padawan" />
                                <ComboBoxItem Content="Royal" />
                                <ComboBoxItem Content="Silver" />
                                <ComboBoxItem Content="Teal" />
                                <ComboBoxItem Content="Watermelon" />
                            </ComboBox>
                            <TextBlock Grid.Column="2" Text="Games Details:" Margin="10" VerticalAlignment="Center"/>
                            <ComboBox x:Name="comboBoxOpcionAirClassicGamesDetails" Grid.Column="3" VerticalAlignment="Center" Width="120" SelectedIndex="0">
                                <ComboBoxItem Content="Steamblue" />
                                <ComboBoxItem Content="Colorized" />
                            </ComboBox>
                            <TextBlock Grid.Column="4" Text="Background:" Margin="10" VerticalAlignment="Center"/>
                            <ComboBox x:Name="comboBoxOpcionAirClassicBackground" Grid.Column="5" VerticalAlignment="Center" Width="100" SelectedIndex="0">
                                <ComboBoxItem Content="None" />
                                <ComboBoxItem Content="Noise" />
                                <ComboBoxItem Content="Dots" />
                                <ComboBoxItem Content="Ribbon" />
                            </ComboBox>
                        </Grid>
                    </Grid>

                    <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" VerticalAlignment="Top">
                        <Grid Padding="0,0,0,10" Margin="0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="buttonImagePreview1AirClassic" Grid.Column="0" Background="Transparent" Padding="0">
                                <Button.Content>
                                    <controls:ImageEx x:Name="imagePreview1AirClassic" Source="Assets/Skins/airclassic1.PNG" />
                                </Button.Content>
                            </Button>

                            <Button x:Name="buttonImagePreview2AirClassic" Grid.Column="1" Background="Transparent" Padding="0">
                                <Button.Content>
                                    <controls:ImageEx x:Name="imagePreview2AirClassic" Source="Assets/Skins/airclassic2.PNG" />
                                </Button.Content>
                            </Button>

                            <Button x:Name="buttonImagePreview3AirClassic" Grid.Column="2" Background="Transparent" Padding="0">
                                <Button.Content>
                                    <controls:ImageEx x:Name="imagePreview3AirClassic" Source="Assets/Skins/airclassic3.PNG" />
                                </Button.Content>
                            </Button>

                            <Button x:Name="buttonImagePreview4AirClassic" Grid.Column="3" Background="Transparent" Padding="0">
                                <Button.Content>
                                    <controls:ImageEx x:Name="imagePreview4AirClassic" Source="Assets/Skins/airclassic4.PNG" />
                                </Button.Content>
                            </Button>
                        </Grid>
                    </ScrollViewer>
                </Grid>
                <Grid x:Name="gridSkinCompact" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="buttonDescargaCompact" Grid.Column="0" Padding="10" Background="#FFE4E4E4" IsEnabled="False">
                            <StackPanel Orientation="Horizontal" >
                                <SymbolIcon Symbol="Download" Margin="0,0,10,0" VerticalAlignment="Center" />
                                <TextBlock x:Name="buttonDescargaTextoCompact"/>
                            </StackPanel>
                        </Button>
                        <TextBlock x:Name="textBlockInformeCompact" Grid.Column="1" Margin="10" VerticalAlignment="Center"/>
                        <ProgressRing x:Name="progressInformeCompact" Grid.Column="2" Margin="10" HorizontalAlignment="Left" Visibility="Collapsed"/>
                        <TextBlock x:Name="textBlockCreadoCompact" Grid.Column="3" Margin="10" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="4" Margin="-5,10,10,10" Text="badanka" VerticalAlignment="Center"/>
                        <Button x:Name="buttonWebCompact" Grid.Column="5" Padding="10" Background="Transparent">
                            <StackPanel Orientation="Horizontal" >
                                <SymbolIcon Symbol="World" Margin="0,0,10,0" VerticalAlignment="Center" />
                                <TextBlock Text="Web"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <Grid Grid.Row="1" Margin="5,10,0,0" Height="44">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock x:Name="tbScreenshotsCompact" Grid.Column="0" VerticalAlignment="Center"/>
                    </Grid>

                    <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" VerticalAlignment="Top">
                        <Grid Padding="0,0,0,10" Margin="0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="buttonImagePreview1Compact" Grid.Column="0" Background="Transparent" Padding="0">
                                <Button.Content>
                                    <controls:ImageEx x:Name="imagePreview1Compact" Source="Assets/Skins/compact1.PNG" />
