                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock x:Uid="Screenshots" Grid.Row="0" HorizontalAlignment="Center" Margin="15"/>
