                                    <Image Source="Assets\patreon.png" Height="20" Width="20" Margin="0,0,10,0" VerticalAlignment="Center" />
                                    <TextBlock Text="Patreon"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <TextBlock x:Name="tbScreenshotsAir" Grid.Row="1" Margin="0,20,0,0"/>

                        <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" VerticalAlignment="Top">
