<Page
    x:Class="Steam_Skins_UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="Page_Loaded">

    <Grid Background="{StaticResource ColorGridPrincipal}">
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="gridTitulo" Grid.Row="0" Background="{StaticResource GridTituloBackground}">
            <TextBlock x:Name="tbTitulo" Margin="50,0,0,0" FontSize="13" Foreground="White" VerticalAlignment="Center"/>
        </Grid>

        <NavigationView x:Name="nvPrincipal" Grid.Row="1" Loaded="Nv_Loaded" ItemInvoked="Nv_ItemInvoked"
                        OpenPaneLength="200" AlwaysShowHeader="False" IsSettingsVisible="False">

            <Grid Padding="10">
                <Grid.Transitions>
                    <TransitionCollection>
                        <EdgeUIThemeTransition Edge="Bottom"/>
                    </TransitionCollection>
                </Grid.Transitions>

                <Grid.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#FFE4E4E4" Offset="0.5" />
                        <GradientStop Color="#FFBFBFBF" Offset="1.0" />
                    </LinearGradientBrush>
                </Grid.Background>

                <Grid x:Name="gridApariencias" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <ListView x:Name="lvApariencias" Grid.Row="0" IsItemClickEnabled="True" IsEnabled="False"
                                  ItemClick="LvAparienciasItemClick" HorizontalAlignment="Center">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Background="Transparent" Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>

                        <ListViewItem x:Name="botonAparienciaAir" Background="{StaticResource BrushSecundario}" Padding="15" MinWidth="0">
                            <StackPanel Orientation="Horizontal" Tag="0">
                                <TextBlock Text="Air" Foreground="White"/>
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem x:Name="botonAparienciaAirClassic" Background="{StaticResource BrushSecundario}" Padding="15" MinWidth="0">
                            <StackPanel Orientation="Horizontal" Tag="1">
                                <TextBlock Text="Air Classic" Foreground="White"/>
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem x:Name="botonAparienciaCompact" Background="{StaticResource BrushSecundario}" Padding="15" MinWidth="0">
                            <StackPanel Orientation="Horizontal" Tag="2">
                                <TextBlock Text="Compact" Foreground="White"/>
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem x:Name="botonAparienciaInvert" Background="{StaticResource BrushSecundario}" Padding="15" MinWidth="0">
                            <StackPanel Orientation="Horizontal" Tag="3">
                                <TextBlock Text="Invert" Foreground="White"/>
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem x:Name="botonAparienciaMetro" Background="{StaticResource BrushSecundario}" Padding="15" MinWidth="0">
                            <StackPanel Orientation="Horizontal" Tag="4">
                                <TextBlock Text="Metro" Foreground="White"/>
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem x:Name="botonAparienciaMinimal" Background="{StaticResource BrushSecundario}" Padding="15" MinWidth="0">
                            <StackPanel Orientation="Horizontal" Tag="5">
                                <TextBlock Text="Minimal" Foreground="White"/>
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem x:Name="botonAparienciaPixelVision2" Background="{StaticResource BrushSecundario}" Padding="15" MinWidth="0">
                            <StackPanel Orientation="Horizontal" Tag="6">
                                <TextBlock Text="PixelVision²" Foreground="White"/>
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem x:Name="botonAparienciaPressure2" Background="{StaticResource BrushSecundario}" Padding="15" MinWidth="0">
                            <StackPanel Orientation="Horizontal" Tag="7">
                                <TextBlock Text="Pressure²" Foreground="White"/>
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem x:Name="botonAparienciaThreshold" Background="{StaticResource BrushSecundario}" Padding="15" MinWidth="0">
                            <StackPanel Orientation="Horizontal" Tag="8">
                                <TextBlock Text="Threshold" Foreground="White"/>
                            </StackPanel>
                        </ListViewItem>
                    </ListView>

                    <Grid Grid.Row="1" Padding="0,20,0,10">
                        <controls:DropShadowPanel x:Name="panelMensajeApariencias" Color="IndianRed" 
                                                  HorizontalAlignment="Center" VerticalAlignment="Center"
                                                  BlurRadius="4" ShadowOpacity="1" OffsetZ="5">
                            <Grid Padding="10" Background="IndianRed">
                                <TextBlock x:Name="tbMensajeApariencias" x:Uid="MessageSkins" TextWrapping="Wrap" Foreground="White"/>
                            </Grid>
                        </controls:DropShadowPanel>

