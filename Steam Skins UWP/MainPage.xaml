                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Orientation="Horizontal" Grid.Column="0" Padding="10">
                                    <StackPanel.Background>
                                        <SolidColorBrush Color="#e6ffff"/>
                                    </StackPanel.Background>

                                    <TextBlock Text="Theme:" Margin="0,10,10,10" VerticalAlignment="Center"/>
