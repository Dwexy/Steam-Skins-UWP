                                            <SymbolIcon Symbol="World" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="White"/>
                                            <TextBlock Text="Web" Foreground="White"/>
                                        </StackPanel>
                                    </ListViewItem>
                                    <ListViewItem Background="{StaticResource BrushSecundario}" Padding="15" MinWidth="0" Margin="5,0,0,0">
                                        <StackPanel Orientation="Horizontal" Tag="1">
                                            <controls:ImageEx Source="Assets\patreon.png" Height="20" Width="20" Margin="0,0,10,0" VerticalAlignment="Center" IsCacheEnabled="True"/>
                                            <TextBlock Text="Patreon" Foreground="White"/>
                                        </StackPanel>
                                    </ListViewItem>
                                </ListView> 
                            </Grid>

