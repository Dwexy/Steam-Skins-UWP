                                    <ComboBox x:Name="cbOpcionThresholdColoredTitlebar" VerticalAlignment="Center" Width="80" SelectedIndex="0">
                                        <ComboBoxItem Content="No" />
                                        <ComboBoxItem Content="Yes" />
                                    </ComboBox>
                                </StackPanel>
                            </Grid>
                            
                            <Grid Grid.Row="2" Padding="0,10,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock x:Uid="Screenshots" Grid.Row="0" HorizontalAlignment="Center" Margin="15"/>
                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Visible">
                                    <StackPanel Orientation="Horizontal">
                                        <Button x:Name="botonImagenThreshold1" Background="Transparent" Padding="0">
                                            <Button.Content>
                                                <controls:ImageEx x:Name="imagenThreshold1" Source="Assets/Skins/thr1.PNG" IsCacheEnabled="True"/>
                                            </Button.Content>
                                        </Button>

                                        <Button x:Name="botonImagenThreshold2" Background="Transparent" Padding="0">
                                            <Button.Content>
                                                <controls:ImageEx x:Name="imagenThreshold2" Source="Assets/Skins/thr2.PNG" IsCacheEnabled="True"/>
                                            </Button.Content>
                                        </Button>

                                        <Button x:Name="botonImagenThreshold3" Background="Transparent" Padding="0">
                                            <Button.Content>
                                                <controls:ImageEx x:Name="imagenThreshold3" Source="Assets/Skins/thr3.PNG" IsCacheEnabled="True"/>
                                            </Button.Content>
                                        </Button>

                                        <Button x:Name="botonImagenThreshold4" Background="Transparent" Padding="0">
                                            <Button.Content>
                                                <controls:ImageEx x:Name="imagenThreshold4" Source="Assets/Skins/thr4.PNG" IsCacheEnabled="True"/>
                                            </Button.Content>
                                        </Button>
                                    </StackPanel>
                                </ScrollViewer>
                            </Grid>
                        </Grid>
                    </Grid> 
                </Grid>

                <Grid x:Name="gridCaptura" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Button x:Name="botonVolver" Grid.Row="0" Padding="15,10" Background="CadetBlue" Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Symbol="Back" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="White"/>
                            <TextBlock x:Uid="Back" Foreground="White"/>
                        </StackPanel>
                    </Button>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <ScrollViewer Grid.Column="0" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
                            <controls:ImageEx x:Name="imagenExpandida" Stretch="UniformToFill" IsCacheEnabled="True"/>
                        </ScrollViewer>
                    </Grid>
                </Grid>

                <Grid x:Name="gridConfig" Visibility="Collapsed">
                    <ScrollViewer>
                        <StackPanel Orientation="Vertical">
                            <TextBlock x:Uid="Skins2" Margin="10,5" FontSize="16"/>
                            <Rectangle HorizontalAlignment="Left" Fill="Black" Height="1" Margin="5" Width="400"/>

                            <TextBlock x:Uid="ConfigSkinsMessage" Margin="10,5" TextWrapping="Wrap"/>
                            <Grid Margin="10,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button x:Name="botonSteamRuta" Grid.Column="0" Padding="15,10" Background="{StaticResource BrushSecundario}">
                                    <StackPanel Orientation="Horizontal" >
                                        <SymbolIcon Symbol="NewFolder" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="White"/>
                                        <TextBlock x:Name="botonSteamRutaTexto" x:Uid="Add" Foreground="White"/>
                                    </StackPanel>
                                </Button>

                                <AppBarSeparator Grid.Column="1" VerticalAlignment="Center"/>
                                <TextBlock x:Name="tbSteamRuta" Grid.Column="2" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            </Grid>

                            <TextBlock x:Uid="ConfigSkinsWay" Margin="10,25,10,5" TextWrapping="Wrap"/>
                            <ComboBox x:Name="cbConfigMetodo" Margin="10,5">
                                <ComboBoxItem Content="1"/>
                                <ComboBoxItem Content="2"/>
                            </ComboBox> 
                        </StackPanel> 
                    </ScrollViewer> 
                </Grid>

                <Grid x:Name="gridMasCosas" Visibility="Collapsed">
                    <ScrollViewer>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <ListView Grid.Column="0" IsItemClickEnabled="True" ItemClick="LvMasCosasItemClick">
                                <ListViewItem Background="{StaticResource BrushSecundario}">
                                    <StackPanel Orientation="Horizontal" Tag="0">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8E1;" Foreground="White" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                        <TextBlock x:Uid="VoteApp" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </ListViewItem>
                                <ListViewItem Background="{StaticResource BrushSecundario}" Margin="0,0,0,20">
                                    <StackPanel Orientation="Horizontal" Tag="1">
                                        <controls:ImageEx Source="Assets\MasCosas\pepeizq.png" Margin="0,0,10,0" Width="15" Height="15" IsCacheEnabled="True" VerticalAlignment="Center"/>
                                        <TextBlock x:Uid="OtherApps" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </ListViewItem>
                                <ListViewItem Background="{StaticResource BrushSecundario}">
                                    <StackPanel Orientation="Horizontal" Tag="2">
                                        <controls:ImageEx Source="Assets\MasCosas\contacto.png" Margin="0,0,10,0" Width="15" Height="15" IsCacheEnabled="True" VerticalAlignment="Center"/>
                                        <TextBlock x:Uid="Contact" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </ListViewItem>
                                <ListViewItem Background="{StaticResource BrushSecundario}" Margin="0,0,0,20">
                                    <StackPanel Orientation="Horizontal" Tag="3">
                                        <controls:ImageEx Source="Assets\MasCosas\feedback.png" Margin="0,0,10,0" Width="15" Height="15" IsCacheEnabled="True" VerticalAlignment="Center"/>
                                        <TextBlock x:Uid="ReportBug" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </ListViewItem>
                                <ListViewItem Background="{StaticResource BrushSecundario}">
                                    <StackPanel Orientation="Horizontal" Tag="4">
                                        <controls:ImageEx Source="Assets\MasCosas\poeditor.png" Margin="0,0,10,0" Width="15" Height="15" IsCacheEnabled="True" VerticalAlignment="Center"/>
                                        <TextBlock x:Uid="HelpTranslate" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </ListViewItem>
                                <ListViewItem Background="{StaticResource BrushSecundario}">
                                    <StackPanel Orientation="Horizontal" Tag="5">
                                        <controls:ImageEx Source="Assets\MasCosas\github.png" Margin="0,0,10,0" Width="15" Height="15" IsCacheEnabled="True" VerticalAlignment="Center"/>
                                        <TextBlock x:Uid="SourceCode" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </ListViewItem>
                                <ListViewItem Background="{StaticResource BrushSecundario}">
                                    <StackPanel Orientation="Horizontal" Tag="6">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE76E;" Foreground="White" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                        <TextBlock x:Uid="ThanksTo" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </ListViewItem>
                            </ListView>

                            <Grid Grid.Column="1" Margin="10,0,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <ProgressBar x:Name="pbMasCosas" Grid.Row="0" Foreground="{StaticResource BrushSecundario}" Visibility="Collapsed" Height="20" IsIndeterminate="True"/>
                                <WebView x:Name="wvMasCosas" Grid.Row="1"/>
                            </Grid>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Grid> 
        </NavigationView> 
    </Grid>
</Page>
