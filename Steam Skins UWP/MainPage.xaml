                                        <Button x:Name="botonImagenAir4" Background="Transparent" Padding="0">
                                            <Button.Content>
                                                <controls:ImageEx x:Name="imagenAir4" Source="Assets/Skins/air4.PNG" IsCacheEnabled="True"/>
                                            </Button.Content>
                                        </Button>
                                    </StackPanel>
                                </ScrollViewer>
                            </Grid>
                        </Grid>

