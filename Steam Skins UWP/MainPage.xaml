                                        </StackPanel>
                                    </ListViewItem> 
                                </ListView>

                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <TextBlock x:Name="tbInformeAir" Margin="10" VerticalAlignment="Center"/>
                                    <ProgressRing x:Name="prInformeAir" Margin="10" Visibility="Collapsed"/>
                                </StackPanel>

                                <ListView x:Name="lvAparienciaAir2" Grid.Column="2" IsItemClickEnabled="True"
