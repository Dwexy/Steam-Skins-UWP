                            <Button x:Name="buttonSeleccionCompact" Content="Compact" Width="160" Margin="0,5" Padding="5" Background="#FFE4E4E4"/>
                            <Button x:Name="buttonSeleccionInvert" Content="Invert" Width="160" Margin="0,5" Padding="5" Background="#FFE4E4E4"/>
