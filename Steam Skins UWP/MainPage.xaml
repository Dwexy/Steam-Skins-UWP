                                        <Button x:Name="botonImagenAir1" Background="Transparent" Padding="0">
                                            <Button.Content>
                                                <controls:ImageEx x:Name="imagenAir1" Source="Assets/Skins/air1.PNG" IsCacheEnabled="True"/>
                                            </Button.Content>
                                        </Button>

                                        <Button x:Name="botonImagenAir2" Background="Transparent" Padding="0">
                                            <Button.Content>
                                                <controls:ImageEx x:Name="imagenAir2" Source="Assets/Skins/air2.PNG" IsCacheEnabled="True"/>
