<Page
    x:Class="Steam_Skins_UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="Page_Loaded" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <DataTemplate x:Key="FeedRSS">
            <Grid Tag="{Binding Enlace}" Margin="1">
                <TextBlock Text="{Binding Titulo}" TextWrapping="Wrap" />
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="gridTopAcrilico" Grid.Row="0" Height="32"/>
        <Grid Grid.Row="0">
            <Grid.Background>
                <SolidColorBrush Color="DarkCyan" Opacity="0.6"/>
            </Grid.Background>

            <TextBlock x:Name="tbTitulo" Foreground="White" Margin="65,0,0,0" VerticalAlignment="Center" FontSize="13"/>
        </Grid>
        <Grid Grid.Row="1" Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid x:Name="gridMenuAcrilico" Grid.Column="0"/>
            <Grid x:Name="gridMenu" Grid.Column="0">
                <Grid.Background>
                    <SolidColorBrush Color="DarkCyan" Opacity="0.6"/>
                </Grid.Background>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Vertical">
                    <Button x:Name="botonApariencias" Foreground="White" Background="Transparent" Padding="15">
                        <ToolTipService.ToolTip>
                            <TextBlock x:Name="botonAparienciasTexto" FontSize="16"/>
                        </ToolTipService.ToolTip>

                        <Button.Content>
                            <Image Source="Assets\steam_logo.png" Width="26" Height="26" HorizontalAlignment="Center"/>
                        </Button.Content>
                    </Button>
                    <Button x:Name="botonConfig" Foreground="White" Background="Transparent" Padding="15">
                        <ToolTipService.ToolTip>
                            <TextBlock x:Name="botonConfigTexto" FontSize="16"/>
                        </ToolTipService.ToolTip>

                        <Button.Content>
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE713;" FontSize="26" HorizontalAlignment="Center"/>
                        </Button.Content>
                    </Button>
                </StackPanel>
                <StackPanel Grid.Row="1" Orientation="Vertical">
                    <Button x:Name="botonVotar" Foreground="White" Background="Transparent" Padding="15">
                        <ToolTipService.ToolTip>
                            <TextBlock x:Name="botonVotarTexto" FontSize="16"/>
                        </ToolTipService.ToolTip>

                        <Button.Content>
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8E1;" FontSize="26" HorizontalAlignment="Center"/>
                        </Button.Content>
                    </Button>
                    <Button x:Name="botonMasCosas" Foreground="White" Background="Transparent" Padding="15">
                        <ToolTipService.ToolTip>
                            <TextBlock x:Name="botonMasCosasTexto" FontSize="16"/>
                        </ToolTipService.ToolTip>

                        <Button.Content>
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE712;" FontSize="26" HorizontalAlignment="Center"/>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Grid>

            <Grid x:Name="gridApariencias" Grid.Column="1">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#FFE4E4E4" Offset="0.5" />
                        <GradientStop Color="#FFBFBFBF" Offset="1.0" />
                    </LinearGradientBrush>
                </Grid.Background>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <controls:DropShadowPanel Grid.Column="0" Margin="10" VerticalAlignment="Top" Color="Black"
                                                  BlurRadius="4" ShadowOpacity="0.5" OffsetZ="5">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Background="CadetBlue">
                            <Button x:Name="buttonSeleccionAir" Content="Air" Width="200" Padding="10,15" Background="Transparent" HorizontalContentAlignment="Left" Foreground="White"/>
                            <Button x:Name="buttonSeleccionAirClassic" Content="Air Classic" Width="200" Padding="10,15" Background="Transparent" HorizontalContentAlignment="Left" Foreground="White"/>
                            <Button x:Name="buttonSeleccionCompact" Content="Compact" Width="200" Padding="10,15" Background="Transparent" HorizontalContentAlignment="Left" Foreground="White"/>
                            <Button x:Name="buttonSeleccionInvert" Content="Invert" Width="200" Padding="10,15" Background="Transparent" HorizontalContentAlignment="Left" Foreground="White"/>
                            <Button x:Name="buttonSeleccionMetro" Content="Metro" Width="200" Padding="10,15" Background="Transparent" HorizontalContentAlignment="Left" Foreground="White"/>
                            <Button x:Name="buttonSeleccionMinimal" Content="Minimal" Width="200" Padding="10,15" Background="Transparent" HorizontalContentAlignment="Left" Foreground="White"/>
                            <Button x:Name="buttonSeleccionPixelVision2" Content="PixelVision²" Width="200" Padding="10,15" Background="Transparent" HorizontalContentAlignment="Left" Foreground="White"/>
                            <Button x:Name="buttonSeleccionPressure2" Content="Pressure²" Width="200" Padding="10,15" Background="Transparent" HorizontalContentAlignment="Left" Foreground="White"/>
                            <Button x:Name="buttonSeleccionThreshold" Content="Threshold" Width="200" Padding="10,15" Background="Transparent" HorizontalContentAlignment="Left" Foreground="White"/>
                        </StackPanel>
                    </ScrollViewer>
                </controls:DropShadowPanel> 
                
                <Grid Grid.Column="1" Margin="10">
                    <Grid x:Name="gridSkinAir" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <controls:DropShadowPanel Grid.Column="0" Color="Black"
                                                  BlurRadius="4" ShadowOpacity="0.5" OffsetZ="5">
                                <Button x:Name="buttonDescargaAir" Padding="10" Background="CadetBlue" IsEnabled="False">
                                    <StackPanel Orientation="Horizontal" >
                                        <SymbolIcon Symbol="Download" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="White"/>
                                        <TextBlock x:Name="buttonDescargaTextoAir" Foreground="White"/>
                                    </StackPanel>
                                </Button>
                            </controls:DropShadowPanel> 
                                
                            <TextBlock x:Name="textBlockInformeAir" Grid.Column="1" Margin="10" VerticalAlignment="Center"/>
                            <ProgressRing x:Name="progressInformeAir" Grid.Column="2" Margin="10" HorizontalAlignment="Left" Visibility="Collapsed"/>
                            <TextBlock x:Name="textBlockCreadoAir" Grid.Column="3" Margin="10" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="4" Margin="-5,10,10,10" Text="Inhibitor" VerticalAlignment="Center"/>

                            <controls:DropShadowPanel Grid.Column="5" VerticalAlignment="Center" Color="Black"
                                                  BlurRadius="4" ShadowOpacity="0.5" OffsetZ="5">
                                <Button x:Name="buttonWebAir" Padding="10" Background="CadetBlue">
                                    <StackPanel Orientation="Horizontal">
                                        <SymbolIcon Symbol="World" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="White"/>
                                        <TextBlock Text="Web" Foreground="White"/>
                                    </StackPanel>
                                </Button>
                            </controls:DropShadowPanel>

                            <controls:DropShadowPanel Grid.Column="6" VerticalAlignment="Center" Color="Black"
                                                  BlurRadius="4" ShadowOpacity="0.5" OffsetZ="5" Margin="5,0,0,0">
                                <Button x:Name="buttonPatreonAir" Padding="10" Background="CadetBlue">
                                    <StackPanel Orientation="Horizontal">
                                        <controls:ImageEx Source="Assets\patreon.png" Height="20" Width="20" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="White"/>
                                        <TextBlock Text="Patreon" Foreground="White"/>
                                    </StackPanel>
                                </Button>
                            </controls:DropShadowPanel>                                
                        </Grid>

                        <Grid Grid.Row="1" Margin="5,10,0,0" Height="44">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock x:Name="tbScreenshotsAir" Grid.Column="0" VerticalAlignment="Center"/>
                            <TextBlock x:Name="tbOpcionesAir" Grid.Column="1" Margin="10,10,0,10" VerticalAlignment="Center"/>
                            <AppBarSeparator Grid.Column="2"/>
                            <Grid x:Name="gridOpcionesAir" Grid.Column="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Theme:" Margin="0,10,10,10" VerticalAlignment="Center"/>
                                <ComboBox x:Name="comboBoxOpcionAirTheme" Grid.Column="1" VerticalAlignment="Center" Width="100" SelectedIndex="0">
                                    <ComboBoxItem Content="Light" />
                                    <ComboBoxItem Content="Dark" />
                                </ComboBox>
                                <TextBlock Grid.Column="2" Text="Color:" Margin="10" VerticalAlignment="Center"/>
                                <ComboBox x:Name="comboBoxOpcionAirColor" Grid.Column="3" VerticalAlignment="Center" Width="120" SelectedIndex="0">
                                    <ComboBoxItem Content="Sky" />
                                    <ComboBoxItem Content="Sea" />
                                    <ComboBoxItem Content="Breeze" />
                                    <ComboBoxItem Content="Slate" />
                                    <ComboBoxItem Content="Truffle" />
                                    <ComboBoxItem Content="Gunmetal" />
                                    <ComboBoxItem Content="Silver" />
                                    <ComboBoxItem Content="Grass" />
                                    <ComboBoxItem Content="Rose" />
                                    <ComboBoxItem Content="Cinnabar" />
                                    <ComboBoxItem Content="Lavender" />
                                    <ComboBoxItem Content="Lilac" />
                                    <ComboBoxItem Content="Deeppurple" />
                                    <ComboBoxItem Content="Steamblue" />
                                    <ComboBoxItem Content="Youtubered" />
                                </ComboBox>
                            </Grid>
                        </Grid>

                        <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" VerticalAlignment="Top">
                            <Grid Padding="0,0,0,10" Margin="0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Button x:Name="buttonImagePreview1Air" Grid.Column="0" Background="Transparent" Padding="0">
                                    <Button.Content>
                                        <controls:ImageEx x:Name="imagePreview1Air" Source="Assets/Skins/air1.PNG" />
                                    </Button.Content>
                                </Button>

                                <Button x:Name="buttonImagePreview2Air" Grid.Column="1" Background="Transparent" Padding="0">
                                    <Button.Content>
                                        <controls:ImageEx x:Name="imagePreview2Air" Source="Assets/Skins/air2.PNG" />
                                    </Button.Content>
                                </Button>

                                <Button x:Name="buttonImagePreview3Air" Grid.Column="2" Background="Transparent" Padding="0">
                                    <Button.Content>
                                        <controls:ImageEx x:Name="imagePreview3Air" Source="Assets/Skins/air3.PNG" />
                                    </Button.Content>
                                </Button>

                                <Button x:Name="buttonImagePreview4Air" Grid.Column="3" Background="Transparent" Padding="0">
                                    <Button.Content>
                                        <controls:ImageEx x:Name="imagePreview4Air" Source="Assets/Skins/air4.PNG" />
                                    </Button.Content>
                                </Button>
                            </Grid>
                        </ScrollViewer>
                    </Grid>
                    <Grid x:Name="gridSkinAirClassic" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <controls:DropShadowPanel Grid.Column="0" Color="Black"
                                                  BlurRadius="4" ShadowOpacity="0.5" OffsetZ="5">
                                <Button x:Name="buttonDescargaAirClassic" Padding="10" Background="CadetBlue" IsEnabled="False">
                                    <StackPanel Orientation="Horizontal" >
                                        <SymbolIcon Symbol="Download" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="White"/>
                                        <TextBlock x:Name="buttonDescargaTextoAirClassic" Foreground="White"/>
                                    </StackPanel>
                                </Button>
                            </controls:DropShadowPanel>
                            
                            <TextBlock x:Name="textBlockInformeAirClassic" Grid.Column="1" Margin="10" VerticalAlignment="Center"/>
                            <ProgressRing x:Name="progressInformeAirClassic" Grid.Column="2" Margin="10" HorizontalAlignment="Left" Visibility="Collapsed"/>
                            <TextBlock x:Name="textBlockCreadoAirClassic" Grid.Column="3" Margin="10" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="4" Margin="-5,10,10,10" Text="Inhibitor" VerticalAlignment="Center"/>
                            
                            <controls:DropShadowPanel Grid.Column="5" VerticalAlignment="Center" Color="Black"
                                                  BlurRadius="4" ShadowOpacity="0.5" OffsetZ="5">
                                <Button x:Name="buttonWebAirClassic" Padding="10" Background="CadetBlue">
                                    <StackPanel Orientation="Horizontal">
                                        <SymbolIcon Symbol="World" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="White"/>
                                        <TextBlock Text="Web" Foreground="White"/>
                                    </StackPanel>
                                </Button>
                            </controls:DropShadowPanel>

                            <controls:DropShadowPanel Grid.Column="6" VerticalAlignment="Center" Color="Black"
                                                  BlurRadius="4" ShadowOpacity="0.5" OffsetZ="5" Margin="5,0,0,0">
                                <Button x:Name="buttonPatreonAirClassic" Padding="10" Background="CadetBlue">
                                    <StackPanel Orientation="Horizontal">
                                        <controls:ImageEx Source="Assets\patreon.png" Height="20" Width="20" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="White"/>
                                        <TextBlock Text="Patreon" Foreground="White"/>
                                    </StackPanel>
                                </Button>
                            </controls:DropShadowPanel>
                        </Grid>

                        <Grid Grid.Row="1" Margin="5,10,0,0" Height="44">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock x:Name="tbScreenshotsAirClassic" Grid.Column="0" VerticalAlignment="Center"/>
                            <TextBlock x:Name="tbOpcionesAirClassic" Grid.Column="1" Margin="10,10,0,10" VerticalAlignment="Center"/>
                            <AppBarSeparator Grid.Column="2"/>
                            <Grid x:Name="gridOpcionesAirClassic" Grid.Column="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Color:" Margin="10" VerticalAlignment="Center"/>
                                <ComboBox x:Name="comboBoxOpcionAirClassicColor" Grid.Column="1" VerticalAlignment="Center" Width="140" SelectedIndex="0">
                                    <ComboBoxItem Content="Blue" />
                                    <ComboBoxItem Content="Bubblegum" />
                                    <ComboBoxItem Content="Cinnamon" />
                                    <ComboBoxItem Content="Green" />
                                    <ComboBoxItem Content="Happyorange" />
                                    <ComboBoxItem Content="Navy" />
                                    <ComboBoxItem Content="Night" />
                                    <ComboBoxItem Content="Orange" />
                                    <ComboBoxItem Content="Padawan" />
                                    <ComboBoxItem Content="Royal" />
                                    <ComboBoxItem Content="Silver" />
                                    <ComboBoxItem Content="Teal" />
                                    <ComboBoxItem Content="Watermelon" />
                                </ComboBox>
                                <TextBlock Grid.Column="2" Text="Games Details:" Margin="10" VerticalAlignment="Center"/>
                                <ComboBox x:Name="comboBoxOpcionAirClassicGamesDetails" Grid.Column="3" VerticalAlignment="Center" Width="120" SelectedIndex="0">
                                    <ComboBoxItem Content="Steamblue" />
                                    <ComboBoxItem Content="Colorized" />
                                </ComboBox>
                                <TextBlock Grid.Column="4" Text="Background:" Margin="10" VerticalAlignment="Center"/>
                                <ComboBox x:Name="comboBoxOpcionAirClassicBackground" Grid.Column="5" VerticalAlignment="Center" Width="100" SelectedIndex="0">
                                    <ComboBoxItem Content="None" />
                                    <ComboBoxItem Content="Noise" />
                                    <ComboBoxItem Content="Dots" />
                                    <ComboBoxItem Content="Ribbon" />
                                </ComboBox>
                            </Grid>
                        </Grid>

                        <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" VerticalAlignment="Top">
                            <Grid Padding="0,0,0,10" Margin="0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Button x:Name="buttonImagePreview1AirClassic" Grid.Column="0" Background="Transparent" Padding="0">
                                    <Button.Content>
                                        <controls:ImageEx x:Name="imagePreview1AirClassic" Source="Assets/Skins/airclassic1.PNG" />
                                    </Button.Content>
                                </Button>

                                <Button x:Name="buttonImagePreview2AirClassic" Grid.Column="1" Background="Transparent" Padding="0">
                                    <Button.Content>
                                        <controls:ImageEx x:Name="imagePreview2AirClassic" Source="Assets/Skins/airclassic2.PNG" />
                                    </Button.Content>
                                </Button>

                                <Button x:Name="buttonImagePreview3AirClassic" Grid.Column="2" Background="Transparent" Padding="0">
                                    <Button.Content>
                                        <controls:ImageEx x:Name="imagePreview3AirClassic" Source="Assets/Skins/airclassic3.PNG" />
                                    </Button.Content>
                                </Button>

                                <Button x:Name="buttonImagePreview4AirClassic" Grid.Column="3" Background="Transparent" Padding="0">
                                    <Button.Content>
                                        <controls:ImageEx x:Name="imagePreview4AirClassic" Source="Assets/Skins/airclassic4.PNG" />
                                    </Button.Content>
                                </Button>
                            </Grid>
                        </ScrollViewer>
                    </Grid>
                    <Grid x:Name="gridSkinCompact" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <controls:DropShadowPanel Grid.Column="0" Color="Black"
                                                  BlurRadius="4" ShadowOpacity="0.5" OffsetZ="5">
                                <Button x:Name="buttonDescargaCompact" Padding="10" Background="CadetBlue" IsEnabled="False">
                                    <StackPanel Orientation="Horizontal" >
                                        <SymbolIcon Symbol="Download" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="White"/>
                                        <TextBlock x:Name="buttonDescargaTextoCompact" Foreground="White"/>
                                    </StackPanel>
                                </Button>
                            </controls:DropShadowPanel>
                            
                            <TextBlock x:Name="textBlockInformeCompact" Grid.Column="1" Margin="10" VerticalAlignment="Center"/>
                            <ProgressRing x:Name="progressInformeCompact" Grid.Column="2" Margin="10" HorizontalAlignment="Left" Visibility="Collapsed"/>
                            <TextBlock x:Name="textBlockCreadoCompact" Grid.Column="3" Margin="10" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="4" Margin="-5,10,10,10" Text="badanka" VerticalAlignment="Center"/>
                            
                            <controls:DropShadowPanel Grid.Column="5" VerticalAlignment="Center" Color="Black"
                                                  BlurRadius="4" ShadowOpacity="0.5" OffsetZ="5">
                                <Button x:Name="buttonWebCompact" Padding="10" Background="CadetBlue">
                                    <StackPanel Orientation="Horizontal">
                                        <SymbolIcon Symbol="World" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="White"/>
                                        <TextBlock Text="Web" Foreground="White"/>
                                    </StackPanel>
                                </Button>
                            </controls:DropShadowPanel>
                        </Grid>

                        <Grid Grid.Row="1" Margin="5,10,0,0" Height="44">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock x:Name="tbScreenshotsCompact" Grid.Column="0" VerticalAlignment="Center"/>
                        </Grid>

                        <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" VerticalAlignment="Top">
                            <Grid Padding="0,0,0,10" Margin="0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Button x:Name="buttonImagePreview1Compact" Grid.Column="0" Background="Transparent" Padding="0">
                                    <Button.Content>
                                        <controls:ImageEx x:Name="imagePreview1Compact" Source="Assets/Skins/compact1.PNG" />
                                    </Button.Content>
                                </Button>

                                <Button x:Name="buttonImagePreview2Compact" Grid.Column="1" Background="Transparent" Padding="0">
                                    <Button.Content>
                                        <controls:ImageEx x:Name="imagePreview2Compact" Source="Assets/Skins/compact2.PNG" />
                                    </Button.Content>
                                </Button>

                                <Button x:Name="buttonImagePreview3Compact" Grid.Column="2" Background="Transparent" Padding="0">
                                    <Button.Content>
                                        <controls:ImageEx x:Name="imagePreview3Compact" Source="Assets/Skins/compact3.PNG" />
                                    </Button.Content>
                                </Button>

                                <Button x:Name="buttonImagePreview4Compact" Grid.Column="3" Background="Transparent" Padding="0">
                                    <Button.Content>
                                        <controls:ImageEx x:Name="imagePreview4Compact" Source="Assets/Skins/compact4.PNG" />
                                    </Button.Content>
                                </Button>
                            </Grid>
                        </ScrollViewer>
                    </Grid>
                    <Grid x:Name="gridSkinInvert" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <controls:DropShadowPanel Grid.Column="0" Color="Black"
                                                  BlurRadius="4" ShadowOpacity="0.5" OffsetZ="5">
                                <Button x:Name="buttonDescargaInvert" Padding="10" Background="CadetBlue" IsEnabled="False">
                                    <StackPanel Orientation="Horizontal" >
                                        <SymbolIcon Symbol="Download" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="White"/>
                                        <TextBlock x:Name="buttonDescargaTextoInvert" Foreground="White"/>
                                    </StackPanel>
                                </Button>
                            </controls:DropShadowPanel>
                            
                            <TextBlock x:Name="textBlockInformeInvert" Grid.Column="1" Margin="10" VerticalAlignment="Center"/>
                            <ProgressRing x:Name="progressInformeInvert" Grid.Column="2" Margin="10" HorizontalAlignment="Left" Visibility="Collapsed"/>
                            <TextBlock x:Name="textBlockCreadoInvert" Grid.Column="3" Margin="10" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="4" Margin="-5,10,10,10" Text="Ultimate Luki" VerticalAlignment="Center"/>

                            <controls:DropShadowPanel Grid.Column="5" VerticalAlignment="Center" Color="Black"
                                                  BlurRadius="4" ShadowOpacity="0.5" OffsetZ="5">
                                <Button x:Name="buttonWebInvert" Padding="10" Background="CadetBlue">
                                    <StackPanel Orientation="Horizontal">
                                        <SymbolIcon Symbol="World" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="White"/>
                                        <TextBlock Text="Web" Foreground="White"/>
                                    </StackPanel>
                                </Button>
                            </controls:DropShadowPanel>

                            <controls:DropShadowPanel Grid.Column="6" VerticalAlignment="Center" Color="Black"
                                                  BlurRadius="4" ShadowOpacity="0.5" OffsetZ="5" Margin="5,0,0,0">
                                <Button x:Name="buttonPaypalInvert" Padding="10" Background="CadetBlue">
