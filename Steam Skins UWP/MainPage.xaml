                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="buttonDescargaAir" Grid.Column="0" Padding="10" Background="Transparent" IsEnabled="False">
                                <StackPanel Orientation="Horizontal" >
                                    <SymbolIcon Symbol="Download" Margin="0,0,10,0" VerticalAlignment="Center" />
                                    <TextBlock x:Name="buttonDescargaTextoAir"/>
                                </StackPanel>
                            </Button>
                            <TextBlock x:Name="textBlockInformeAir" Grid.Column="1" Margin="10" VerticalAlignment="Center"/>
